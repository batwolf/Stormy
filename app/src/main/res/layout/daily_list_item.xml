<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:background="@android:color/holo_orange_light"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewCircle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/bg_temperature"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewIcon"
        android:src="@drawable/clear_day"
        android:layout_toRightOf="@+id/imageViewCircle"
        android:layout_toEndOf="@+id/imageViewCircle"
        android:layout_centerInParent="true"
        android:layout_marginLeft="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDayName"
        android:textColor="@android:color/white"
        tools:text="Sunday"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/imageViewIcon"
        android:layout_toEndOf="@+id/imageViewIcon"
        android:layout_centerInParent="true"
        android:layout_marginLeft="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="100"
        android:id="@+id/textViewTemperature"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_alignBottom="@+id/imageViewCircle"
        android:layout_alignLeft="@+id/imageViewCircle"
        android:layout_alignRight="@+id/imageViewCircle"
        android:layout_alignTop="@+id/imageViewCircle"
        android:gravity="center"/>
</RelativeLayout>